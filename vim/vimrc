set expandtab
set incsearch
filetype on
filetype plugin on
filetype indent on
let mapleader=" "
noremap <Leader>h <C-W>h
noremap <Leader>j <C-W>j
noremap <Leader>k <C-W>k
noremap <Leader>l <C-W>l
noremap <Leader>x <C-W>x
noremap <Leader>t :terminal<CR>
noremap <Leader>nh :nohlsearch<CR>
noremap <Leader>hc :helpclose<CR>
tnoremap <Esc> <C-\><C-n>
